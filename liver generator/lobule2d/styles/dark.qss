}

QTabWidget::pane
{
     border: 1px solid #282828;

}

QTabBar::tab
{
     background-color: #323232;
     border-width: 1px;
     border-style: solid;
     border-radius: 0;
     padding: 3px;
     padding-left: 5px;
     padding-right: 5px;
     width: 150px;
}

QTabBar::tab:selected
{
     background-color: #282828;
}

QToolBar
{
     border: 0px;
     spacing: 3px;
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:closed:has-children:has-siblings
{
    border-image: none;
    image: url(:/images/branch-closed.png);
}

QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings
{
    border-image: none;
    image: url(:/images/downarrow.png);
}

QTreeView
{
    selection-background-color: #5F5F5F;
}

QFrame#menuTabs QToolButton {
    color: rgb(129, 129, 129);
    background-color: rgb(40, 40, 40);
}

QFrame#menuTabs QToolButton::checked {
    color: rgb(255, 255, 255);
    background-color: rgb(50, 50, 50);
}

QFrame#menuTabs QToolButton:focus {
    border: 0px;
}

QLabel {
    padding: 0 6px 0 6px;
}

QGroupBox {
    border: none;
    border-top: 30px solid rgb(40, 40, 40);
    padding-top: 6px;
}
QGroupBox::title {
    padding: 6px;
    background: rgb(40, 40, 40);
}

QStatusBar {
    background: #282828;
}
QStatusBar::item {
    border: none;
}

QStatusBar QProgressBar {
    max-width: 200px;
}

QStatusBar QLabel {
    min-width: 300px;
    background: #282828;
    qproperty-alignment: 'AlignVCenter | AlignRight';
}

QProgressBar:horizontal {
    border: none;
    text-align: center;
    padding: 1px;
    background: #282828;
}
QProgressBar::chunk:horizontal {
    background-color: qlineargradient(spread:reflect, x1:1, y1:0.545, x2:1, y2:0, stop:0 rgba(28, 66, 111, 255), stop:1 rgba(37, 87, 146, 255));
}
