QWidget
{
    color: #DADADA;
    background-color: #323232;
}

QWidget:disabled
{
    color: #404040;
    background-color: #323232;
}

QWidget:focus
{
    border: 1px solid #5F5F5F;
}

QWidget:item:selected
{
    background-color: #5F5F5F;
}


QPushButton, QToolButton
{
    border: 0px solid #323232;
    border-radius: 1px;
    background-color: #323232;
}
QPushButton
{
    border-width: 1px;
    border-style: solid;
    border-radius: 0;
    padding: 3px;
    padding-left: 5px;
    padding-right: 5px;
    width: 100px;
    border-color: #282828;
}

QPushButton:hover, QToolButton:hover, QComboBox::hover
{
    border: 1px solid #5F5F5F;
}

QRadioButton::indicator:hover, QCheckBox::indicator:hover
{
}

QComboBox QAbstractItemView {
    border: 2px solid  #323232;
    selection-background-color: #5F5F5F;
}

QComboBox::drop-down {
    border: 0px solid #5F5F5F;
}

QComboBox::down-arrow
{
    image: url(:/images/downarrow.png);
}

QSpinBox::up-arrow, QDateEdit::up-arrow, QTimeEdit::up-arrow
{
     image: url(:/images/uparrow.png);
     width: 7px;
     height: 7px;
}

QSpinBox::down-arrow, QDateEdit::down-arrow, QTimeEdit::down-arrow
{
     image: url(:/images/downarrow.png);
     width: 7px;
     height: 7px;
}

QSpinBox::up-button,  QSpinBox::down-button, QTimeEdit::up-button,  QDateEdit::down-button, QDateEdit::up-button,  QTimeEdit::down-button
{
    border: none;
}

QLineEdit, QTextEdit, QPlainTextEdit, QSpinBox, QTimeEdit, QComboBox, QTreeView, QTableWidget
{
    border-radius: 0px;
    border: 1px solid #282828;
    selection-background-color: #5F5F5F;
}

QSplitter::handle {
    background : transparent;
    width: 1px;
    height: 1px;
}

QSplitter::handle:horizontal:hover, QSplitter::handle:vertical:hover
{
    background:  #5F5F5F;
    width: 1px;
    height: 1px;
}

QScrollBar:horizontal
{
     border: none;
     background: #282828;
     height: 7px;
     margin: 0px 0px 0px 0px;
}

QScrollBar::handle:horizontal
{
      background: #5F5F5F;
      min-height: 20px;
      border-radius: 0px;
}

QScrollBar:vertical
{
     border: none;
     background: #282828;
     width: 7px;
     margin: 0px 0px 0px 0px;
}

QScrollBar::handle:vertical
{
      background: #5F5F5F;
      min-height: 20px;
      border-radius: 0px;
}

QHeaderView::down-arrow
{
    image: url(:/images/downarrow.png);
}

QHeaderView::up-arrow
{
    image: url(:/images/uparrow.png);
}

QHeaderView::section
{
    padding: 6px;
    padding-left: 5px;
    padding-right: 5px;
    background-color:  #282828;
    border: none;
}

QToolBar::handle
{
     spacing: 3px;
     background: url(:/images/handle.png);
}

QToolTip
